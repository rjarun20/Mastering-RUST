{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build",
            "options": {
                "cwd": "${workspaceFolder}/hello_world" // Set the correct working directory
            }
        }
    ]
}